pipeline {
    agent any
    triggers {
        pollSCM('* * * * *')  // Este trigger revisa cambios en el repositorio cada minuto
    }
    environment {
        JAVA_HOME = '/usr/lib/jvm/java-1.17.0-openjdk-amd64' // Ruta correcta para Java 17
        PATH = "${JAVA_HOME}/bin:${env.PATH}" // Aseg√∫rate de usar env.PATH
    }

    stages {
        stage("Install Java 17") {
            steps {
                sh '''
                    sudo apt-get update
                    sudo apt-get install openjdk-17-jdk -y
                    java -version
                '''
            }
        }

        stage("Prepare Gradle") {
            steps {
                sh 'chmod +x ./sistemaedu/gradlew'
            }
        }

        stage("Compile") {
            steps {
                dir('sistemaedu') {
                    sh "./gradlew compileJava"
                }
            }
        }

        stage("Unit test") {
            steps {
                dir('sistemaedu') {
                    sh "./gradlew test"
                }
            }
        }

        stage("Code coverage") {
            steps {
                dir('sistemaedu') {
                    sh "./gradlew jacocoTestReport"
                    publishHTML (target: [
                        reportDir: 'build/reports/jacoco/test/html',
                        reportFiles: 'index.html',
                        reportName: 'JacocoReport'
                    ])
                    sh "./gradlew jacocoTestCoverageVerification"
                }
            }
        }

        stage('SonarQube analysis') {
            steps {
                dir('sistemaedu') {
                    withSonarQubeEnv('SonarQubePruebas') {
                        sh './gradlew sonarqube'
                    }
                }
            }
        }
    }
}